<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="开奖公告"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="#000"
        android:background="#fff"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0f2f2f2"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/toolbar_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="#fff"
        app:tabIndicatorColor="#ff4129"
        app:tabIndicatorHeight="@dimen/common_2"
        app:tabSelectedTextColor="#ff4129"
        app:tabTextColor="#8c8c8c"
        app:tabGravity="center"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/TabLayout.TabText"
        app:tabContentStart="0dp"
        app:tabBackground="@android:color/white"
        app:tabMaxWidth="100dp"
        app:tabMinWidth="50dp"

        >
        <android.support.design.widget.TabItem
            style="@style/style_common_width_height_mm"
            android:text="热点"
            />
        <android.support.design.widget.TabItem
            style="@style/style_common_width_height_mm"
            android:text="商业科技"/>
        <android.support.design.widget.TabItem
            style="@style/style_common_width_height_mm"
            android:text="前沿"/>
        <android.support.design.widget.TabItem
            style="@style/style_common_width_height_mm"
            android:text="视觉"/>
        <android.support.design.widget.TabItem
            style="@style/style_common_width_height_mm"
            android:text="谣言粉碎机"/>
        <android.support.design.widget.TabItem
            style="@style/style_common_width_height_mm"
            android:text="评论"/>
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        style="@style/style_common_width_height_mm"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />
</LinearLayout>